@model My_Site.Models.SparePartListViewModel

@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Результат поиска:</h3>
    </div>
    @if(Model.SpareParts.Count() != 0)
    { 
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Название</th>
                <th>Категория</th>
                <th class="text-right">Цена</th>
                <th class="text-center">Количество</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var item in Model.SpareParts)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td>@Html.ActionLink(item.MarkWithModel, "Edit", new { spareId = item.Id })</td>
                    <td>@item.Category</td>
                    <td class="text-right">@item.Price.ToString("# руб")</td>
                    <td class="text-right">@item.Price.ToString()</td>
                    <td class="text-center">
                        @Html.ActionLink("Удалить", "Delete", new { spareId = item.Id }, new { @class = "btn btn-default btn-xs" })
                    </td>
                </tr>
            }
        </table>
    </div>
    }
    else
    {
        <div class="panel-body">
            <h1>Ничего не найдено :(</h1>
        </div>
    }    
    <div class="panel-footer">
        @Html.ActionLink("На главную", "Index", null,
            new { @class = "btn btn-default" })
        Страницы: @Html.PageLinks(Model.PagingInfo, x => Url.Action("SearchResult", new { search = Model.Search, page = x })))
    </div>
</div>

