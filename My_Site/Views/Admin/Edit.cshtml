@model My_Site.Models.SparePart

@{
    ViewBag.Title = "Редактирование товара";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Редактирование «@Model.MarkWithModel»</h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="panel-body">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label>@Html.LabelFor(x => x.Mark)</label>
                @Html.TextBoxFor(x => x.Mark,
                                new { @class = "form-control" })
                <label>@Html.LabelFor(x => x.Model)</label>
                @Html.TextBoxFor(x => x.Model,
                                new { @class = "form-control" })
                <label>@Html.LabelFor(x => x.Category)</label>
                @Html.TextBoxFor(x => x.Category,
                                new { @class = "form-control" })
                <label>@Html.LabelFor(x => x.UnderCategory)</label>
                @Html.TextBoxFor(x => x.UnderCategory,
                                new { @class = "form-control" })
                <label>@Html.LabelFor(x => x.Price)</label>
                @Html.TextBoxFor(x => x.Price,
                                new { @class = "form-control" })
                <label>@Html.LabelFor(x => x.Description)</label>
                @Html.TextAreaFor(x=>x.Description, 5, 200,
                        new { @class = "form-control", rows = 5 })
                <label>@Html.LabelFor(x => x.Quantity)</label>
                @Html.TextBoxFor(x => x.Quantity,
                                new { @class = "form-control" })

            </div>                
        </div>
        <div class="panel-footer">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
            @Html.ActionLink("Отменить изменения и вернуться к списку", "Index", null, new
            {
                @class = "btn btn-default"
            })
        </div>
    }
</div>