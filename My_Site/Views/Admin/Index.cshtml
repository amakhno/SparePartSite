@using My_Site.Models;
@model SparePartListViewModel


@{
    ViewBag.Title = "Управление сайтом";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список товаров</h3>
    </div>
    <div class="panel-body">
        @if (Model.SpareParts.Count()!=0)
        { 
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Название</th>
                    <th>Категория</th>
                    <th class="text-right">Цена</th>
                    <th class="text-center">Количество</th>
                    <th class="text-center">Действия</th>
                </tr>
                @foreach (SparePart item in Model.SpareParts)
                {
                    <tr>
                        <td class="text-right">@item.Id</td>
                        <td>@Html.ActionLink(item.MarkWithModel, "Edit", new { spareId = item.Id })</td>
                        <td>@item.Category</td>
                        <td class="text-right">@item.Price.ToString("# руб")</td>
                        <td class="text-right">@item.Quantity</td>
                        <td class="text-center">
                            @Html.ActionLink("Удалить", "Delete", new { spareId = item.Id }, new { @class = "btn btn-default btn-xs" })                        
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <h2>Ничего не найдено :(</h2>
        }
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить", "Create", null,
            new { @class = "btn btn-default" })
        @if (Model.Search==null)
        {
            <p>Страницы: @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { page = x }))</p>
        }
        else 
        {
            <p>Страницы: @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { page = x, search = Model.Search }))</p>
        }
        <p>
        @using (Html.BeginForm("Index", "Admin"))
        {
            @Html.TextBoxFor(x=>x.Search)        
            <input type="submit" class="btn btn-success" value="Поиск" />
        }
    </div>
</div>

